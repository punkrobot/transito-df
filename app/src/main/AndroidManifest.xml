<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mx.bytecraft.app.transitodf" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="mx.bytecraft.app.transitodf.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="mx.bytecraft.app.transitodf.ReglamentoActivity"
            android:label="@string/title_reglamento"
            android:parentActivityName="mx.bytecraft.app.transitodf.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mx.bytecraft.app.transitodf.MainActivity" />
        </activity>

        <activity
            android:name="mx.bytecraft.app.transitodf.ArticuloActivity"
            android:label="@string/title_articulo"
            android:parentActivityName="mx.bytecraft.app.transitodf.ReglamentoActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mx.bytecraft.app.transitodf.ReglamentoActivity" />
        </activity>

        <activity
            android:name="mx.bytecraft.app.transitodf.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="mx.bytecraft.app.transitodf.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mx.bytecraft.app.transitodf.MainActivity" />
        </activity>

    </application>

</manifest>
